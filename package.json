{
  "name": "HTML-to-Design",
  "version": "1.0.0",
  "description": "Your Figma Plugin",
  "main": "dist/code.js",
  "scripts": {
    "build": "npm run typecheck && npm run build:main && npm run build:ui",
    "test": "jest",
    "build:main": "esbuild code.ts --bundle --outfile=dist/code.js --platform=node --format=cjs --loader:.html=text --target=es6",
    "build:ui": "esbuild src/ui.ts --bundle --outfile=dist/ui.js --platform=browser --format=iife --target=es6",
    "lint": "eslint --ext .ts,.tsx --ignore-pattern node_modules .",
    "lint:fix": "eslint --ext .ts,.tsx --ignore-pattern node_modules --fix .",
    "watch": "concurrently \"npm:watch:main\" \"npm:watch:ui\"",
    "watch:main": "esbuild code.ts --bundle --outfile=dist/code.js --platform=node --format=cjs --loader:.html=text --target=es6 --watch",
    "watch:ui": "esbuild src/ui.ts --bundle --outfile=dist/ui.js --platform=browser --format=iife --target=es6 --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "powershell -NoProfile -ExecutionPolicy Bypass -Command \"if (Test-Path dist) { Remove-Item dist -Recurse -Force }\"",
    "serve:capture": "node server/capture.js",
    "postinstall": "playwright install chromium"
  },
  "author": "",
  "license": "",
  "devDependencies": {
    "@figma/eslint-plugin-figma-plugins": "*",
    "@figma/plugin-typings": "^1.121.0",
    "@types/jest": "^30.0.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.24.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.3.2"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@figma/figma-plugins/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json"
    },
    "root": true,
    "rules": {
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_",
          "caughtErrorsIgnorePattern": "^_"
        }
      ]
    }
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "gradient-parser": "^0.1.5",
    "playwright": "^1.49.0",
    "transformation-matrix": "^2.16.1"
  }
}
